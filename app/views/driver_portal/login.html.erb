<h1>Driver Portal Login</h1>

<div class="login">
	<%= form_tag(:action => 'login_attempt') do %>
		<%= label_tag(:username) %><br>
		<%= text_field_tag(:username) %><br>
		<br>
		<%= label_tag(:password) %><br>
		<%= text_field_tag(:password) %><br>
		<br>
		<%= submit_tag("Log In") %>
	<% end %>
</div>